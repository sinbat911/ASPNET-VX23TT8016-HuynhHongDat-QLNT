@{
    ViewData["Title"] = "Trang Chủ Tổng Quan";
}

<div class="text-center mb-5">
    <h1 class="display-4 fw-bold text-primary">Hệ Thống Quản Lý Dược Phẩm</h1>
    <p class="lead">Theo dõi và kiểm soát hoạt động kinh doanh nhà thuốc</p>
</div>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card text-white bg-success h-100 shadow-sm">
            <div class="card-body d-flex flex-column align-items-center justify-content-center">
                <h3 class="card-title">Kho Dược Phẩm</h3>
                <p class="card-text text-center">Quản lý danh mục hàng hóa, hoạt chất, lô date và kiểm soát tồn kho.</p>
                <a asp-controller="Thuocs" asp-action="Index" class="btn btn-light mt-auto fw-bold text-success">Truy cập ngay</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-primary h-100 shadow-sm">
            <div class="card-body d-flex flex-column align-items-center justify-content-center">
                <h3 class="card-title">Quản Lý Giao Dịch</h3>
                <p class="card-text text-center">Kiểm soát hóa đơn bán lẻ, doanh thu và lịch sử giao dịch.</p>
                <a asp-controller="HoaDons" asp-action="Index" class="btn btn-light mt-auto fw-bold text-primary">Xem Hóa Đơn</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-warning h-100 shadow-sm">
            <div class="card-body d-flex flex-column align-items-center justify-content-center">
                <h3 class="card-title text-dark">Phân Loại Hàng</h3>
                <p class="card-text text-dark text-center">Thiết lập nhóm thuốc kê đơn (ETC), không kê đơn (OTC)...</p>
                <a asp-controller="DanhMucs" asp-action="Index" class="btn btn-dark mt-auto fw-bold">Quản lý Cấu hình</a>
            </div>
        </div>
    </div>
</div>